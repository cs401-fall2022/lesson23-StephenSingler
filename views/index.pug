extends layout

block content
  ul(class='mainBlog')
    each blog in data
      li= blog.blog_id + " - " + blog.blog_txt

  div(class='create', id='section')
    h2 Create Post 
    form(action="/add", method="POST")
      div   
        label(for="blog") Enter title: 
        input(name="blog", id="blog", placeholder="Enter post content")
      div
        button(class='createButton', id='button') Create 

  div(class='delete', id='section')
    h2 Delete Post 
    form(action="/delete", method="POST")  
      div 
        label(for="blog") Enter Entry ID: 
        input(name="blog", id="blog", placeholder="1")
      div
        button(class='deleteButton', id='button') Delete

  div(class='edit', id='section')
    h2 Edit Post
    form(action='/edit' method='POST')
      div
        label(for='blog_id') Enter post ID:
        input#blog_id(name='blog_id' placeholder='1')
      div
        label(for='txt') Edited post text:
        input#txt(type='text' name='txt' placeholder="Enter content to edit")
      div
        button(class='editButton', id='button') Edit Post